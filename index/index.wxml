<keyboard show="{{ show1 }}" closeButtonText="完成" bindinput="changeInput" binddelete="changeDetete" />
<keyboard show="{{ show2 }}" title="微信小程序安全键盘" theme="custom" bindinput="changeInput" binddelete="changeDetete" />
<keyboard show="{{ show3 }}" extraKey="{{ ['X'] }}" bindinput="changeInput" binddelete="changeDetete" />
<keyboard show="{{ show4 }}" title="微信小程序安全键盘" bindinput="changeInput" binddelete="changeDetete" />
<keyboard show="{{ show5 }}" themeColor="#1989fa" bindinput="changeInput" extraKey="{{ ['00', '.'] }}" theme="custom" binddelete="changeDetete" />
<keyboard show="{{ show6 }}" bindinput="changeInput" binddelete="changeDetete" />